<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center form-login height-500">
      <p>
        <%= form_tag password_update_path do %>
          <%= password_field_tag :password, nil, placeholder: "Password", class: "form-control" %>
          <br>
          <%= password_field_tag :confirm_password, nil, placeholder: "Confirm Password", class: "form-control" %>
          <br>
          <%= submit_tag "Update", class: "btn btn-primary m-w-150" %>
        <% end %>
      </p>
    </div>
  </div>
</div>
