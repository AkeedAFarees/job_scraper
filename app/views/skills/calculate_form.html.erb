<div class="table_filters_wrap">
  <div class="container">
    <%= form_for :skill, url: calculate_path, remote: true do |f| %>
      <div class="row m-b-40">
        <h3 class="multiplier">Calculate by Skill & Experience</h3>
      </div>
      <div class="row">
        <div class="col-sm-8 m-0-a">
          <div class="main_inner_search_wrap calculator-form">
            <%= f.label :name, "Resource", class: "m-r-10 m-w-90" %>
            <%= f.select :name, @skills.map(&:name).uniq, {:include_blank => "Select skill"}, class: "skill-select form-control m-r-40" %>

            <%= f.label :experience, "Experience", class: "m-r-10 m-w-90" %>
            <%= f.select :experience, {}, {:include_blank => "Select experience"}, class: "experience-select form-control m-r-40" %>

            <%= f.submit 'Calculate', class: "btn btn-primary m-r-40" %>
          </div>
        </div>
      </div>

      <hr/>

      <div class="row m-b-40">
        <h3 class="multiplier">Calculate by Salary</h3>
      </div>
      <div class="row">
        <div class="col-sm-8 m-0-a">
          <div class="main_inner_search_wrap">
            <%= f.label :max, "Salary", class: "m-r-10 m-w-90" %>
            <%= f.text_field :max, placeholder: "Maximum Salary", class: "form-control m-r-40" %>

            <%= f.submit 'Calculate', class: "btn btn-primary m-r-40" %>
          </div>
        </div>
      </div>
    <% end %>

    <hr class="m-b-40"/>

    <div class="results error_msg"/>
  </div>
</div>
