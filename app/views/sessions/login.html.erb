<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center form-login height-500">
      <p>
        <%= form_tag '/login' do %>
            <%= text_field_tag :username, nil, placeholder: "Username", class: "form-control" %>
          <br>
          <%= password_field_tag :password, nil, placeholder: "Password", class: "form-control" %>
          <br>
          <%= submit_tag "Log In", class: "btn btn-primary m-w-150" %>
          <%#= link_to "Change Password", password_edit_path, class: "btn btn-primary m-w-150"  %>
      <% end %>
      </p>
    </div>
  </div>
</div>
